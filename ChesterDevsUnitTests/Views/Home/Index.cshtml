@model TaxViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-12 padded-top">
        
        <form method="post" action="@Url.Action("Index")">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <label for="TaxCode">Tax Code</label>
                        <input type="text" class="form-control" id="TaxCode" name="TaxCode" value="@Model.TaxCode">
                    </div>
                    <div class="form-group">
                        <label for="Income">Income</label>
                        <input type="text" class="form-control" id="Income" name="Income" value="@Model.Income.ToString("F2")">
                    </div>
                </div>
                <div class="panel-footer"><button type="submit" class="btn btn-primary">Submit</button></div>
            </div>
        </form>

    </div>
</div>

@if (Model.Tax > 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="text-center">@Model.Tax.ToString("C")</h1>
                </div>
            </div>
        </div>
    </div>
}


